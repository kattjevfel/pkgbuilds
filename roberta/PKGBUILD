pkgname=roberta
pkgver=0.1.0
pkgrel=1
pkgdesc='Steam Play compatibility tool to run adventure games using native Linux ScummVM'
arch=(any)
url=https://github.com/dreamer/roberta
license=(GPL)
depends=(python scummvm inotify-tools)
makedepends=(git)
source=("git+${url}.git#tag=v${pkgver}")
md5sums=('SKIP')

package() {
	make -C "${pkgname}" DESTDIR="${pkgdir}" prefix=/usr install
}
